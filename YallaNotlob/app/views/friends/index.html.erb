<html>
      <head>
            <style>
                .asd{
                    border : solid 3px ; 
                }
                .img{
                    width : 40px ; 
                    height : 40px ; 
            }
            </style>

      </head>
    <body>
            <h3>friends</h3>

            <div class= "add-freind">
            <%= form_tag("/friends/search", method:"get") do  %>
                <div>
                  
                  <%= text_field_tag(:q) %>

                </div>
                <div>
                  <%= submit_tag("add new friend") %>
                </div>
              <% end %>

              


            <h4>friends list</h4>

            <div class= "asd">
            <ul>
              <% @fris.each do |fri| %>
                <% @alls.each do |all| %>
                    <%   if fri.friend_id == all.id  %>
                                <div>
                                
                              <li>
                            <%= all.username %> |
                            <%= all.email %> | 
                           
                            <%= image_tag(all.avatar_thumbnail)  %>
                            
                              <%= link_to 'unfriend', friend_path(fri.friend_id) , method: :delete %>
                              <%= yield %>


                            

                            </li>
                            </div>

                    <% end %>
                
              <% end %>
              <% end %>
            </ul>
            </div>

 <% if current_user  %>

<p>
<%= link_to "edit account" ,edit_user_registration_path  %>
</p>
<br>

<%= image_tag(current_user.avatar_thumbnail)  %>


<% else  %>

<p>
<%= link_to "sign up" ,new_user_registration_path %>
</p>
<p>
<%= link_to "sign in" ,new_user_session_path  %>
</p>
<% end %>


        </body>
 <html>


